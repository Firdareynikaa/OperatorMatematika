<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="24dp"
        android:text="Masukan angka Pertama" />

    <EditText
        android:id="@+id/editawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="53dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtkedua"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="115dp"
        android:text="Masukan angka kedua" />

    <EditText
        android:id="@+id/editkedua"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editawal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtoperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="221dp"
        android:text="Pilih Operator" />

    <Button
        android:id="@+id/btnjumlah"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="204dp"
        android:text="+" />

    <Button
        android:id="@+id/btnkurang"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtawal"
        android:layout_alignTop="@+id/btnbagi"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="-" />

    <Button
        android:id="@+id/btnkali"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnkurang"
        android:layout_alignEnd="@+id/txtkedua"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="35dp"
        android:text="*" />

    <Button
        android:id="@+id/btnbagi"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnjumlah"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="76dp"
        android:text="/" />

    <TextView
        android:id="@+id/txthasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="157dp"
        android:layout_marginBottom="161dp"
        android:text="Hasil" />

    <EditText
        android:id="@+id/edithasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtkedua"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="79dp"
        android:ems="10"
        android:inputType="textPersonName" />
</RelativeLayout>